!!! 5
%html
  %head
    %title ETFlex

    = stylesheet_link_tag 'application'
    = csrf_meta_tags

    %meta(name="viewport" content="width=device-width, initial-scale=0.8, minimum-scale=0.8")

  %body#minimal.message
    = yield

  // These go at the end so that loading JS doesn't block the page load...
  = javascript_include_tag 'application'

  :javascript
    require('app').minimal(window, #{ client_options })
