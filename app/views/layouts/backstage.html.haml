!!! 5
%html
  %head
    %title ETFlex Backstage

    = stylesheet_link_tag 'backstage'
    = javascript_include_tag 'modernizr-2.0.6.js'
    = airbrake_javascript_notifier

    = csrf_meta_tags

  %body
    #chrome
      #header
        #site-info
          %a#logo(href="/")
            ET
            %span.quiet<> flex
          %ul#user_controls
            %li#nav_logout
              %a(href="#") Sign out

        %ul#nav
          %li#nav_scenes.selected
            %a(href="#")
              %span.icon Scenes
          %li#nav_inputs
            %a(href="#")
              %span.icon Inputs
          %li#nav_outputs
            %a(href="#")
              %span.icon Outputs

      #master
        #main-sidebar.sidebar
          .search
            %input(type="text" placeholder="Search Scenes")

          %ul.tabs
            %li.selected
              %a(href="#") Public
            %li
              %a(href="#") Yours

          Content

        #content
          Content
