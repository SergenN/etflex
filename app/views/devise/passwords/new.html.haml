.standalone
  %h2= I18n.t 'devise.passwords.forgotten'

  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    .inputs
      = f.input :email, :required => true, label: I18n.t('words.email_address')

    %ul.buttons
      %li= f.button :submit, I18n.t('devise.passwords.send'), class: 'green'
      %li= link_to I18n.t('words.cancel'), root_path
